import kotlin.Boolean;

CREATE TABLE note (
  id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
  title TEXT,
  content TEXT NOT NULL,
  isFavourite INTEGER AS Boolean NOT NULL DEFAULT 0
);

selectAll:
SELECT *
FROM note;

insert:
INSERT INTO note(title, content)
VALUES (?, ?);

delete:
DELETE FROM note
WHERE id = ?;

updateFavourite:
UPDATE note
SET isFavourite = ?
WHERE id = ?;